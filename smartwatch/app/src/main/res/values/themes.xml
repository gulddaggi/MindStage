<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mindstagewatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/ms_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/ms_on_primary</item>
        <item name="colorSecondary">@color/ms_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/ms_on_secondary</item>

        <!-- Surfaces / Background -->
        <item name="android:colorBackground">@color/ms_surface</item>
        <item name="colorSurface">@color/ms_surface</item>
        <item name="colorOnSurface">@color/ms_on_surface</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.Mindstagewatch.Button.Large</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>