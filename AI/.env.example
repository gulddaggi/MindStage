
# Test Mode Settings
STT_TEST_MODE=true
TTS_TEST_MODE=false
TTS_DEBUG_KEEP_LATEST=true
TTS_DEBUG_DIR=/tmp/tts_latest

# API Endpoints, only used in tests (now dead)
# SPRING_ENDPOINT=https://mindstage.duckdns.org/api/s3/presigned-url

# GMS API Gateway Configuration
# All OpenAI API calls (including Whisper) are routed through GMS gateway
# Use GMS_KEY (same value as OPENAI_API_KEY) for authentication
OPENAI_API_BASE=https://gms.ssafy.io/gmsapi/api.openai.com/v1
GMS_KEY= #[gms_key_value]
OPENAI_MODEL=gpt-4o-mini #[or other model]
STRICT_PRESIGNED_URL_ERRORS=false #presigned url error strictness

# Other Settings
DEBUG=true

LOG_QUESTION_PROMPT=true #whether to log full question prompt content
LOG_QUESTION_PROMPT_MAX_CHARS=100000 #log full question prompt content if over this many chars, turned on by above env param